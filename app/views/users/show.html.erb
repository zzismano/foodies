<div class="container">
  <div class="container d-flex flex-column justify-content-center align-items-center" data-controller="add-friend">
   <!--
    <img src="https://hips.hearstapps.com/hmg-prod/images/gordon-ramsay-646367718a5f4.jpg?crop=1xw:1xh;center,top&resize=980:*" alt="avatar" class="rounded-circle mb-3">
    <h1>GordonBoy</h1>
    -->
    <%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fill, class: "rounded-circle mb-3" %>
    <h1><%= @user.username %></h1>
    <%= button_to "Add as a friend!", { :controller => "friendships", :action => "create", :user_id => @user.id },  remote: true, class: "btn btn-primary" %>
  </div>
  <div class="d-flex">
    <button class="button-filter">Recipes</button>
    <button class="button-filter">meals</button>
  </div>

  <%= @user_meals.each do |meal| %>
    <div class="container">
      <div class="card" style="col-12">


        <div id="header d-flex justify-content-start" class="card-title">

          <img src="https://ih1.redbubble.net/image.999574152.6606/flat,750x1000,075,f.jpg" alt="meal" class="avatar">
          <span>  <%= meal.user.username %> </span>



        </div>

        <div id="user_image" class="card-body">

          <img class="card-img-top" src="https://www.allrecipes.com/thmb/F1rucOY3FQT5Ic0oyxdLoqU_yKc=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/222006-disneys-ratatouille-DDMFS-4x3-36eb15843ab548a79e7aab761dac92e1.jpg" alt="meal_photo">

        </div>



        <div id="actions">
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>

        <div id="comments">

    </div>
  <% end %>
