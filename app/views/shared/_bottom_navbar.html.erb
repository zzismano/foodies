<div class="footer footer-foodies footer-collapse bottom-navbar">
  <div class="container d-flex justify-content-between">
    <%= link_to root_path, class: "my-3" do %>
      <i class="fa-solid fa-house fa-xl tan-tag"></i>
    <% end %>

    <%= link_to create_post_path, class: "my-3" do %>
      <i class="fa-regular fa-square-plus fa-xl tan-tag"></i>
    <% end %>

    <% if current_user %>
      <%= link_to profile_path(current_user), class: "my-3" do %>
        <i class="fa-solid fa-user fa-xl tan-tag"></i>
      <% end %>
    <% end %>
  </div>
</div>
